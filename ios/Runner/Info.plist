<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" 
"http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

    <!-- App Metadata -->
    <key>CFBundleDisplayName</key>
    <string>lactocompanion</string>
    <key>CFBundleName</key>
    <string>lactocompanion</string>
    <key>CFBundleIdentifier</key>
    <string>com.yourcompany.lactocompanion</string> <!-- replace this with your actual bundle id -->
    <key>CFBundleVersion</key>
    <string>1.0.0</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <!-- App Icons -->
    <key>CFBundleIcons</key>
    <dict/>
    <key>CFBundleIcons~ipad</key>
    <dict/>

    <!-- Flutter Engine Config -->
    <key>io.flutter.embedded_views_preview</key>
    <true/>
    <key>io.flutter.app.FlutterPluginRegistrant</key>
    <true/>

    <!-- Orientation & Keyboard Handling (mapped from android:configChanges) -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- Launch Mode & Theme Mapping -->
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <false/>
    </dict>

    <!-- Required for WebView, OAuth, and Supabase Redirects -->
    <key>LSApplicationQueriesSchemes</key>
    <array>
        <string>io.supabase.flutter</string>
        <string>https</string>
        <string>http</string>
    </array>

    <!-- Supabase redirect (matches Android intent-filter) -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>io.supabase.flutter</string>
            </array>
            <key>CFBundleURLName</key>
            <string>login-callback</string>
        </dict>
        <dict>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>io.supabase.flutter</string>
            </array>
            <key>CFBundleURLName</key>
            <string>reset-callback</string>
        </dict>
    </array>

    <!-- Permissions (safe defaults for Flutter apps) -->
    <key>NSCameraUsageDescription</key>
    <string>This app requires camera access to capture photos.</string>
    <key>NSPhotoLibraryUsageDescription</key>
    <string>This app needs photo library access to select and upload images.</string>
    <key>NSMicrophoneUsageDescription</key>
    <string>This app uses your microphone for recording or communication features.</string>
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>This app requires your location to show nearby services.</string>
    <key>NSLocationAlwaysUsageDescription</key>
    <string>This app may use your location in the background for accurate service tracking.</string>
    <key>NSBluetoothAlwaysUsageDescription</key>
    <string>This app may use Bluetooth for device communication.</string>
    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>This app needs access to save images to your photo library.</string>
    <key>NSRemindersUsageDescription</key>
    <string>This app may access reminders to enhance functionality.</string>
    <key>NSUserTrackingUsageDescription</key>
    <string>Your data may be used to provide a more personalized experience.</string>

    <!-- Background Modes (optional, safe default off) -->
    <key>UIBackgroundModes</key>
    <array>
        <string>fetch</string>
        <string>remote-notification</string>
    </array>

    <!-- Allow arbitrary network connections (if Supabase / local dev is used) -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
    </dict>

</dict>
</plist>
